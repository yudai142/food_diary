.mt-2.items-center.z-10
  = form_with url: login_path, method: :post ,class: "p-14 bg-white max-w-sm mx-auto rounded-xl shadow-xl overflow-hidden p-6 space-y-10" do |f|
    h2.text-4xl.font-bold.text-center.text-indigo-600
      | Login
    .f-outline.px-2.relative.border.rounded-lg.focus-within:border-indigo-500
      = f.text_field :email, class:"block p-2 w-full text-lg appearance-none focus:outline-none bg-transparent", placeholder:"Email", type:"email"
    .f-outline.px-2.relative.border.rounded-lg.focus-within:border-indigo-500
      = f.password_field :password, class:"block p-2 w-full text-lg appearance-none focus:outline-none bg-transparent", placeholder:"Password"
    .block.mt-2
      label.flex.items-center[for=""]
        input.ml-2.rounded.border-gray-300.text-indigo-600.shadow-sm.focus:border-indigo-300.focus:ring.focus:ring-indigo-200.focus:ring-opacity-50[type="checkbox"]
        span.ml-2.text-sm.text-gray-600
          | Remember me
    .flex.items-center.flex.items-center.justify-end.mt-4
      a.underline.text-sm.text-gray-600.hover:text-gray-900[href="#"]
        |  Forgot Password? 
      = f.submit 'ログイン', class: "px-6 py-2 ml-4 font-semibold cursor-pointer text-center focus:outline-none transition hover:shadow-lg shadow hover:bg-indigo-700 rounded-full text-white bg-indigo-600 "
